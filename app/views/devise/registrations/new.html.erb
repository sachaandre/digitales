

<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 forms">

			<h2 class="text-center">Inscrivez vous</h2>

			<%= form_for(resource, as: resource_name, :html => {class: 'form-horizontal'}, url: registration_path(resource_name))  do |f| %>
			  <%= devise_error_messages! %>

				<div class="form-group row">
			    <%= f.label 'PrÃ©nom', class: 'col-sm-3 control-label' %>
					<div class="col-sm-8">
							<%= f.text_field :first_name, class: 'form-control', autofocus: true %>
					</div>

			  </div>

				<div class="form-group row">
			    <%= f.label 'Nom', class: 'col-sm-3 control-label' %>
					<div class="col-sm-8">
							<%= f.text_field :last_name, class: 'form-control' %>
					</div>

			  </div>

			  <div class="form-group row">
			    <%= f.label 'Email', class: 'col-sm-3 control-label' %>
					<div class="col-sm-8">
							<%= f.email_field :email, class: 'form-control'%>
					</div>

			  </div>

			  <div class="form-group row">
			    <%= f.label 'Mot de passe', class: 'col-sm-3 control-label' %>
					<div class="col-sm-8">
						<%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
					</div>

			  </div>

			  <div class="form-group row">
			    <%= f.label 'Confirmation', class: 'col-sm-3 control-label' %>
					<div class="col-sm-8">
						<%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
					</div>
			  </div>

			  <div class="actions row">
					<%= f.submit "Valider l'inscription", class: 'col-sm-12'%>
			  </div>
			<% end %>

		</div>
	</div>
</div>
