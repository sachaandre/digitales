<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 forms">
			<h2 class="text-center">Connectez vous !</h2>

			<%= form_for(resource, as: resource_name, :html => {class: 'form-horizontal'}, url: session_path(resource_name)) do |f| %>
				<div class="form-group row">
					<%= f.label :email, class: "col-sm-3 control-label" %>
					<div class="col-sm-8">
							<%= f.email_field :email, class: "form-control", autofocus: true %>
					</div>
				</div>

				<div class="form-group row">
					<%= f.label :password, class: "col-sm-3 control-label" %>
					<div class="col-sm-8">
							<%= f.password_field :password, class: "form-control", autocomplete: "off" %>
					</div>

				</div>

				<% if devise_mapping.rememberable? -%>
					<div class="form-group row">
						<%= f.label :remember_me, class:"col-sm-3 control-label" %>
						<%= f.check_box :remember_me, class: 'custom-control-input' %>
					</div>
				<% end -%>

				<div class="actions row">
					<%= f.submit "Log in", class: "col-sm-12" %>
				</div>
			<% end %>



		</div>
	</div>
</div>
